#include <iostream>
using namespace std;

int main() {
    int n, caseNum = 1;
    while (cin >> n && n != 0) {
        int h[55], sum = 0;
        for (int i = 0; i < n; i++) {
            cin >> h[i];
            sum += h[i];
        }
        int target = sum / n;
        int moves = 0;
        for (int i = 0; i < n; i++) {
            if (h[i] > target) {
                moves += h[i] - target;
            }
        }
        cout << "Set #" << caseNum << endl;
        cout << "The minimum number of moves is " << moves << "." << endl;
        cout << endl;
        caseNum++;
    }
    return 0;
}
