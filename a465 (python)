#!/usr/bin/env python3

def min_scarecrows(field):

    n = len(field)
    if n == 0:
        return 0
    
    count = 0
    i = 0
    
    while i < n:
        # 如果當前位置是不毛之地，跳過
        if field[i] == '#':
            i += 1
            continue
        
        # 如果當前位置是良田（需要保護）
        # 貪心策略：在 i+1 位置放稻草人（如果可以），這樣可以保護 i, i+1, i+2
        count += 1
        
        # 放置稻草人後，跳過被保護的區域
        # 稻草人放在 i+1，保護 i, i+1, i+2，所以跳到 i+3
        i += 3
    
    return count

def solve():
    T = int(input())
    
    for case in range(1, T + 1):
        N = int(input())
        field = input().strip()
        
        result = min_scarecrows(field)
        print(f"Case {case}: {result}")

if __name__ == "__main__":
    solve()
