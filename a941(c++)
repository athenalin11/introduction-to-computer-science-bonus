#include <cstdio>
#include <algorithm>
using namespace std;

const int MAXR = 2000005;
int addr[MAXR];

int main() {
    int t;
    scanf("%d", &t);
    
    while (t--) {
        int r;
        scanf("%d", &r);
        
        for (int i = 0; i < r; i++) {
            scanf("%d", &addr[i]);
        }
        
        // 排序找中位數
        sort(addr, addr + r);
        
        // 中位數位置
        int median;
        if (r % 2 == 1) {
            // 奇數個：取中間的
            median = addr[r / 2];
        } else {
            // 偶數個：取中間兩個較小的
            median = addr[r / 2 - 1];
        }
        
        // 計算總距離
        long long total_dist = 0;
        for (int i = 0; i < r; i++) {
            total_dist += abs(addr[i] - median);
        }
        
        printf("%lld %d\n", total_dist, median);
    }
    
    return 0;
}
